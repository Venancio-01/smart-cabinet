{
  "name": "smart-cabinet",
  "version": "1.0.2",
  "private": true,
  "description": "智能载体管控系统",
  "author": "hjrich <15054854614@163.com>",
  "license": "MIT",
  "homepage": "https://www.electronjs.org",
  "main": "dist/main/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "typecheck:web": "vue-tsc --noEmit src/renderer/**/*.vue",
    "typecheck:main": "tsc --noEmit src/main/**/*.ts",
    "pull-db": "cd src/main/database && npx prisma db pull",
    "format-db": "cd src/main/database && npx prisma-case-format",
    "generate-db": "cd src/main/database && npx prisma generate",
    "init-db": "npm run pull-db && npm run format-db && npm run generate-db",
    "dev:web": "vite",
    "dev:main": "bash scripts/env.development.sh && npx swc src/main/ --out-dir dist/ && sudo /home/liqingshan/.nvm/versions/node/v17.9.0/bin/node node_modules/.bin/electron dist/main/index.js --no-sandbox",
    "build:web": "vite build",
    "build:main": "bash scripts/env.production.sh && npx swc src/main/ --out-dir dist/",
    "build:electron": "electron-builder --linux",
    "build": "npm run build:main && npm run build:web && npm run build:electron"
  },
  "dependencies": {
    "@prisma/client": "^4.14.1",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "ffi-napi": "^4.0.3",
    "node-machine-id": "^1.1.12",
    "prisma": "^4.14.1",
    "ref-array-di": "^1.2.2",
    "ref-napi": "^3.0.3",
    "ref-struct-di": "^1.1.1",
    "serialport": "^11.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.3",
    "@swc/cli": "~0.1.62",
    "@swc/core": "^1.3.60",
    "@swc/helpers": "~0.5.1",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "animate.css": "^4.1.1",
    "ant-design-vue": "^3.2.20",
    "axios": "^1.4.0",
    "core-js": "^3.30.2",
    "electron": "^12.2.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "~8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lodash": "^4.17.21",
    "pinia": "^2.1.3",
    "prettier": "^2.8.8",
    "prisma-case-format": "^1.5.0",
    "typescript": "~5.0.4",
    "unocss": "^0.52.3",
    "unplugin-auto-import": "^0.16.2",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.3.8",
    "vite-plugin-commonjs-externals": "^0.1.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^4.2.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.1",
    "vue-tsc": "^1.6.5",
    "vue3-perfect-scrollbar": "^1.6.1"
  }
}
