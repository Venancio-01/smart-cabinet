{
  "name": "smart-cabinet",
  "version": "1.0.2",
  "private": true,
  "description": "智能载体管控系统",
  "author": "hjrich <15054854614@163.com>",
  "license": "MIT",
  "homepage": "https://www.electronjs.org",
  "main": "dist/main/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "typecheck:web": "vue-tsc --noEmit src/renderer/**/*.vue",
    "typecheck:main": "tsc --noEmit src/main/**/*.ts",
    "pull-db": "cd src/main/database && npx prisma db pull",
    "format-db": "cd src/main/database && npx prisma-case-format",
    "generate-db": "cd src/main/database && npx prisma generate",
    "init-db": "npm run pull-db && npm run format-db && npm run generate-db",
    "dev:web": "vite",
    "dev:main": "bash scripts/env.development.sh && npx swc src/main/ --out-dir dist/ && sudo node_modules/.bin/electron dist/main/index.js --no-sandbox",
    "build:web": "vite build",
    "build:main": "bash scripts/env.production.sh && npx swc src/main/ --out-dir dist/",
    "build:electron": "electron-builder --linux",
    "build": "npm run build:main && npm run build:web && npm run build:electron"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.3",
    "@types/node": "20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "~8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "typescript": "~5.0.4",
    "vue-tsc": "^1.6.5"
  },
  "dependencies": {
    "tslib": "^2.5.3",
    "tsup": "^7.0.0"
  }
}
