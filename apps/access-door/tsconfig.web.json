{
  "extends": "config/tsconfig.web.json",
  "include": [
    "renderer/env.d.ts",
    "renderer/**/*",
    "renderer/**/*.vue",
    "renderer/**/*.json",
    "renderer/*.d.ts",
    "types/*.ts",
    "types/*.d.ts"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./renderer/*"],
      "~/*": ["./types/*"]
    }
  }
}
