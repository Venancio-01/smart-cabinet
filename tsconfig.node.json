{
  "extends": "./tsconfig.json",
  "include": [
    "vite.coinfig.ts",
    "src/main/*",
    "src/main/**/*",
    "src/types/*.ts",
    "src/types/*.d.ts",
    "package.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/main/*"],
      "~/*": ["src/*"],
      "pkg": ["./package.json"]
    }
  }
}
