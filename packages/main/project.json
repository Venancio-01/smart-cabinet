{
  "name": "main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/main/src",
  "projectType": "application",
  "targets": {
    "pull-db":{
      "command": "cd packages/main/src/prisma && npx prisma db pull"
    },
    "generate-db": {
      "command": "cd packages/main/src/prisma && npx prisma generate"
    },
    "build": {
      "command": "npx swc packages/main --out-dir dist/packages"
    },
    "dev": {
      "dependsOn": [
        "build"
      ],
      "command": "sudo node node_modules/.bin/electron dist/packages/main/src/index.js --no-sandbox"
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/main/**/*.ts"
        ]
      }
    }
  },
  "tags": []
}
