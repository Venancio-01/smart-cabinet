{
  "name": "main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/main/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/main",
        "format": [
          "cjs"
        ],
        "main": "packages/main/src/index.ts",
        "tsConfig": "packages/main/tsconfig.app.json",
        "assets": [
          {
            "input": "packages/main/public/crc-lib",
            "glob": "*.so",
            "output": "/public/crc-lib"
          },
          {
            "input": "packages/main/public/finger-lib",
            "glob": "*.so",
            "output": "/public/finger-lib"
          }
        ],
        "esbuildOptions": {
          "alias": {
            "@": "src"
          }
        }
      }
    },
    "dev": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "main:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "main:build:production"
        }
      }
    }
  },
  "tags": []
}
