{
  "name": "main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/main/src",
  "projectType": "application",
  "targets": {
    "generate-db":{
      "command": "cd packages/main/src/prisma && npx prisma generate"
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/main",
        "main": "packages/main/src/index.ts",
        "tsConfig": "packages/main/tsconfig.app.json",
        "assets": [
          {
            "input": "packages/main/public/finger-lib",
            "glob": "*.so",
            "output": "./public/finger-lib"
          },
          {
            "input": "packages/main/public/crc-lib",
            "glob": "*.so",
            "output": "./public/crc-lib"
          }
        ]
      }
    },
    "dev": {
      "dependsOn": [
        "build"
      ],
      "command": "sudo node node_modules/.bin/electron dist/packages/main/src/index.js --no-sandbox"
    }
  },
  "tags": []
}
